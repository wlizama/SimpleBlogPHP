{% extends 'layout.twig' %}

{% block content %}
    <h2>Users</h2>
    <p>
        <a href="{{ 'admin/users/create' | url }}">+ New User</a>
    </p>
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Edit</th>
            <th>Del</th>
        </tr>
        {% for user in users %}
        <tr>
            <td>{{ user.name }}</td>
            <td>{{ user.email }}</td>
            <td>EDIT</td>
            <td>DEL</td>
        </tr>
        {% endfor %}
    </table>
{% endblock %}