{% extends 'layout.twig' %}

{% block content %}
    <h2>Manage Posts</h2>
    <p>
        <a href="{{ 'admin/posts/create' | url }}">+ New Post</a>
    </p>
    <table class="table">
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Edit</th>
            <th>Del</th>
        </tr>
        {% for blogPost in blog_posts %}
        <tr>
            <td>{{ blogPost.id }}</td>
            <td>{{ blogPost.title }}</td>
            <td>EDIT</td>
            <td>DEL</td>
        </tr>
        {% endfor %}
    </table>
{% endblock %}
