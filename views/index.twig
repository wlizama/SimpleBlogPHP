{% extends 'layout.twig' %}

{% block content %}
	{% for blogPost in blog_posts %}
	<div class="blog-post">
		<h2>{{ blogPost.title }}</h2>
		<p>Jan 3, 2017 by <a href="#">Wilder</a></p>
		{% if blogPost.img_url %}
		<div class="blog-post-image">
			<img src="{{ blogPost.img_url }}" alt="">
		</div>
		{% endif %}
		<div class="blog-post-content">
			{{ blogPost.content }}
		</div>
	</div>
	{% endfor %}
{% endblock %}
